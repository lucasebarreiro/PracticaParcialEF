@model Reserva
@{
    ViewData["Title"] = "Agregar Reserva";
}
<h2>@ViewData["Title"]</h2>

<form asp-action="Agregar" method="post">
    <div class="form-group">
        <label asp-for="CantidadPasajeros"></label>
        <input asp-for="CantidadPasajeros" class="form-control" type="number" />
        <span asp-validation-for="CantidadPasajeros" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="FechaInicio"></label>
        <input asp-for="FechaInicio" class="form-control" type="date" required />
        <span asp-validation-for="FechaInicio" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="FechaFin"></label>
        <input asp-for="FechaFin" class="form-control" type="date" required />
        <span asp-validation-for="FechaFin" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="IdDestino" class="form-label">Destino</label>
        <select asp-for="IdDestino" class="form-control" asp-items="ViewBag.Destinos">
            <option value="">Seleccione un Destino</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Agregar</button>  
</form>
    

